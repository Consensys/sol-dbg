{
    "roots": [""],
    "testMatch": ["**/test/**/*.spec.ts"],
    "moduleDirectories": ["node_modules"],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },

    "testTimeout": 200000,
    "verbose": true,

    "coveragePathIgnorePatterns": ["/node_modules/", "/test/", "/coverage/", "/.compiler_cache/"],
    "coverageReporters": ["text", "text-summary", "lcov"],
    "coverageThreshold": {
        "global": {
            "statements": 85,
            "branches": 68,
            "functions": 80,
            "lines": 85
        }
    }
}
